@functions{
    public Microsoft.AspNetCore.Html.IHtmlContent ClockTypeString(int? type)
    {
        if (type == null)
            return Html.Raw("无效数据");
        if (type.Value == 1)
            return Html.Raw("<span style='color:#3CC51F'>签到</span>");
        if (type.Value == 0)
            return Html.Raw("<span style='color:#F43530'>签退</span>");

        return Html.Raw("未知类型");
    }
